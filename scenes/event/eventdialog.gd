class Labelbutton:
	extends Label
	
	var id = null
	
	func _ready():
		set_process_input(true)
	
	func _init(id,text):
		self.id = id
		set_text(text)
	
	func _input(event):
		if event.type == InputEvent.MOUSE_BUTTON and event.is_pressed():
			var xmin = get_global_pos().x
			var ymin = get_global_pos().y
			var xmax = xmin + get_size().x
			var ymax = ymin + get_size().y
